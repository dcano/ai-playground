<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.7</version>
        <relativePath/>
    </parent>
    <groupId>io.twba</groupId>
    <artifactId>ai-playground</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>ai-playground</name>
    <description>ai-playground</description>
    <modules>
        <module>ai-playground-ollama</module>
        <module>ai-playground-runtime</module>
        <module>ai-playground-web</module>
        <module>ai-playground-prompt-templates</module>
    </modules>
    <properties>
        <java.version>21</java.version>
        <spring-ai.version>1.1.0</spring-ai.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.twba</groupId>
                <artifactId>ai-playground-web</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.twba</groupId>
                <artifactId>ai-playground-ollama</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.twba</groupId>
                <artifactId>ai-playground-autoconfiguration</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>io.twba</groupId>
                <artifactId>ai-playground-prompt-templates</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>org.springframework.ai</groupId>
                <artifactId>spring-ai-bom</artifactId>
                <version>${spring-ai.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
